    <script>
        // Page Navigation
        const pages = document.querySelectorAll('.page');
        let currentPage = 1;

        function showPage(pageNumber) {
            pages.forEach(page => page.classList.remove('active'));

            document.getElementById(`page${pageNumber}`).classList.add('active');
            currentPage = pageNumber;

            if (pageNumber === 2) initializeChat();
            if (pageNumber === 3) initializeGame();
            if (pageNumber === 4) loadPlaylist();
        }

        // Page 1: Yes Button
        document.getElementById('yesBtn').addEventListener('click', function () {
            document.getElementById('answerText').classList.remove('hidden');
            this.innerHTML = `<span class="heart-pulse">‚ù§Ô∏è</span> I Love You Too, Arya <span class="heart-pulse">‚ù§Ô∏è</span>`;
            this.style.pointerEvents = 'none';

            setTimeout(() => showPage(2), 1500);
        });

        // Page 2: WhatsApp Chat
        function initializeChat() {
            const chatContainer = document.getElementById('chatMessages');
            chatContainer.innerHTML = '';

            // pupu's message first (from right side - sent)
            setTimeout(() => {
                addMessageToChat('pupu', 'pupu, I\'m not feeling well today... cramps and mood swings are really bad üòî', 'sent', '9:42 AM');
                chatContainer.scrollTop = chatContainer.scrollHeight;

                // Arya's reply after a short delay (from left side - received)
                setTimeout(() => {
                    const aryaMessage = 'I know these days can be tough, babe, with cramps making you uncomfortable and mood swings making everything feel heavier. I want you to know that I see you, I understand, and I\'m here for you in every way possible. No matter how you\'re feeling today - whether you\'re tired, irritable, emotional, or just not yourself - I\'m not going anywhere. I\'ll be right here by your side, bringing you warm tea, comforting hugs, and all the love you need. Please don\'t stress about anything. Let me take care of you. Let me be your safe space where you can just be exactly how you feel. You don\'t have to be strong all the time - I\'ve got you. Remember that you\'re beautiful, you\'re strong, and you\'re loved more than words can express. This phase will pass, but my love for you is constant and unchanging. Just relax, my love. Let me pamper you and make you feel special, because you truly are. With all my love, today and always, ‚ù§Ô∏è';
                    addMessageToChat('Arya', aryaMessage, 'received', '9:43 AM');
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                }, 2000);
            }, 500);

            // Preset message buttons
            const presetButtons = document.querySelectorAll('.preset-btn');
            presetButtons.forEach(btn => {
                btn.addEventListener('click', function () {
                    const message = this.getAttribute('data-message');
                    sendPresetMessage(message);
                });
            });

            // Send button functionality
            document.getElementById('sendBtn').addEventListener('click', sendMessage);
            document.getElementById('chatInput').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') sendMessage();
            });

            // To Game button
            document.getElementById('toGameBtn').addEventListener('click', () => showPage(3));
        }

        function addMessageToChat(sender, content, type, time) {
            const chatContainer = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;

            messageDiv.innerHTML = `
                <div class="message-content">${content}</div>
                <div class="message-time">${time}${type === 'sent' ? ' <i class="fas fa-check-double"></i>' : ''}</div>
            `;

            chatContainer.appendChild(messageDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        function sendPresetMessage(message) {
            // pupu sends message (right side - sent)
            addMessageToChat('pupu', message, 'sent', getCurrentTime());

            // Auto-reply from Arya based on the preset message
            setTimeout(() => {
                let reply = '';
                if (message.includes('love you')) {
                    reply = 'I love you more than anything in this world, booboo ‚ù§Ô∏è You are my everything, my heart, my soul. Every moment with you is a blessing.';
                } else if (message.includes('miss you')) {
                    reply = 'I miss you too, my beautiful babe üíï Even when we\'re apart, you\'re always in my thoughts. Can\'t wait to hold you close again.';
                } else if (message.includes('mean everything')) {
                    reply = 'And you mean the universe to me, booboo üåü You\'re not just my everything, you\'re my reason to smile, to love, to be better every day.';
                } else if (message.includes('Thank you')) {
                    reply = 'You never have to thank me, babe üòä Being there for you is not a duty, it\'s my greatest joy. I\'ll always be here, always.';
                } else if (message.includes('feel so much better')) {
                    reply = 'I\'m so glad you\'re feeling better, booboo ü•∞ Your happiness is my happiness. Seeing you smile makes my whole world bright.';
                } else {
                    reply = 'I love you so much, babe ‚ù§Ô∏è You make every day special just by being you.';
                }
                addMessageToChat('Arya', reply, 'received', getCurrentTime());
            }, 1000);
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();

            if (message) {
                // pupu sends message (right side - sent)
                addMessageToChat('pupu', message, 'sent', getCurrentTime());
                input.value = '';

                // Auto-reply from Arya
                setTimeout(() => {
                    const replies = [
                        'I love you more than anything, babe ‚ù§Ô∏è',
                        'You\'re my everything, my beautiful booboo üíï',
                        'Always here for you, my love üòò',
                        'You make my world complete, babe üåü',
                        'Every moment with you is precious, booboo ‚ù§Ô∏è',
                        'You\'re the best thing that ever happened to me, babe üíï'
                    ];
                    const randomReply = replies[Math.floor(Math.random() * replies.length)];
                    addMessageToChat('Arya', randomReply, 'received', getCurrentTime());
                }, 1000);
            }
        }

        function getCurrentTime() {
            const now = new Date();
            let hours = now.getHours();
            let minutes = now.getMinutes();
            const ampm = hours >= 12 ? 'PM' : 'AM';

            hours = hours % 12;
            hours = hours ? hours : 12;
            minutes = minutes < 10 ? '0' + minutes : minutes;

            return `${hours}:${minutes} ${ampm}`;
        }

        // Page 3: Tic Tac Toe Game
        let gameBoard = ['', '', '', '', '', '', '', '', ''];
        let currentPlayer = '‚ù§Ô∏è';
        let gameActive = true;
        const winningConditions = [
            [0, 1, 2], [3, 4, 5], [6, 7, 8],
            [0, 3, 6], [1, 4, 7], [2, 5, 8],
            [0, 4, 8], [2, 4, 6]
        ];

        function initializeGame() {
            gameBoard = ['', '', '', '', '', '', '', '', ''];
            currentPlayer = '‚ù§Ô∏è';
            gameActive = true;

            const gameBoardElement = document.getElementById('gameBoard');
            const gameStatusElement = document.getElementById('gameStatus');
            const proceedBtn = document.getElementById('toMusicBtn');

            gameBoardElement.innerHTML = '';
            gameStatusElement.textContent = "Your turn! Tap a square to place ‚ù§Ô∏è.";
            gameStatusElement.style.color = 'var(--primary-dark)';
            proceedBtn.style.display = 'none';

            // Create game cells
            for (let i = 0; i < 9; i++) {
                const cell = document.createElement('div');
                cell.classList.add('cell');
                cell.setAttribute('data-index', i);
                cell.addEventListener('click', handleCellClick);
                gameBoardElement.appendChild(cell);
            }

            // Restart button
            document.getElementById('restartBtn').addEventListener('click', initializeGame);

            // Proceed button
            proceedBtn.addEventListener('click', () => showPage(4));
        }

        function handleCellClick(event) {
            const cellIndex = parseInt(event.target.getAttribute('data-index'));

            if (gameBoard[cellIndex] !== '' || !gameActive) return;

            // User's move (Mili - ‚ù§Ô∏è)
            processMove(cellIndex, '‚ù§Ô∏è');

            // Bot's move if game still active
            if (gameActive) setTimeout(makeBotMove, 800);
        }

        function processMove(cellIndex, player) {
            gameBoard[cellIndex] = player;
            const cellElement = document.querySelector(`.cell[data-index="${cellIndex}"]`);
            cellElement.textContent = player;

            // Add appropriate heart class
            if (player === '‚ù§Ô∏è') {
                cellElement.classList.add('heart-red');
                cellElement.classList.remove('heart-blue');
            } else {
                cellElement.classList.add('heart-blue');
                cellElement.classList.remove('heart-red');
            }

            checkGameResult();
        }

        function makeBotMove() {
            if (!gameActive) return;

            let moveIndex;

            // Try to win (üíô)
            moveIndex = findWinningMove('üíô');
            if (moveIndex === -1) {
                // Block user (‚ù§Ô∏è)
                moveIndex = findWinningMove('‚ù§Ô∏è');
            }
            if (moveIndex === -1) {
                // Take center
                if (gameBoard[4] === '') moveIndex = 4;
                else {
                    // Random move
                    const availableCells = gameBoard
                        .map((cell, index) => cell === '' ? index : null)
                        .filter(val => val !== null);
                    moveIndex = availableCells[Math.floor(Math.random() * availableCells.length)];
                }
            }

            if (moveIndex !== undefined && moveIndex !== -1) {
                processMove(moveIndex, 'üíô');
            }
        }

        function findWinningMove(player) {
            for (let condition of winningConditions) {
                const [a, b, c] = condition;
                const cells = [gameBoard[a], gameBoard[b], gameBoard[c]];

                const playerCount = cells.filter(cell => cell === player).length;
                const emptyCount = cells.filter(cell => cell === '').length;

                if (playerCount === 2 && emptyCount === 1) {
                    if (gameBoard[a] === '') return a;
                    if (gameBoard[b] === '') return b;
                    if (gameBoard[c] === '') return c;
                }
            }
            return -1;
        }

        function checkGameResult() {
            const gameStatusElement = document.getElementById('gameStatus');
            const proceedBtn = document.getElementById('toMusicBtn');

            // Check for win
            for (let condition of winningConditions) {
                const [a, b, c] = condition;
                if (gameBoard[a] && gameBoard[a] === gameBoard[b] && gameBoard[a] === gameBoard[c]) {
                    gameActive = false;
                    if (gameBoard[a] === '‚ù§Ô∏è') {
                        gameStatusElement.innerHTML = "You won! ‚ù§Ô∏è You're absolutely amazing!";
                        gameStatusElement.style.color = 'var(--primary-dark)';
                    } else {
                        gameStatusElement.innerHTML = "I won! üíô But you're still the champion of my heart!";
                        gameStatusElement.style.color = 'var(--secondary-dark)';
                    }
                    proceedBtn.style.display = 'flex';
                    return;
                }
            }

            // Check for draw
            if (!gameBoard.includes('')) {
                gameActive = false;
                gameStatusElement.innerHTML = "It's a perfect draw! ‚ù§Ô∏èüíô";
                gameStatusElement.style.color = 'var(--primary-dark)';
                proceedBtn.style.display = 'flex';
                return;
            }

            // Game continues
            currentPlayer = currentPlayer === '‚ù§Ô∏è' ? 'üíô' : '‚ù§Ô∏è';
            if (currentPlayer === '‚ù§Ô∏è') {
                gameStatusElement.innerHTML = "Your turn! Tap a square to place ‚ù§Ô∏è.";
                gameStatusElement.style.color = 'var(--primary-dark)';
            } else {
                gameStatusElement.innerHTML = "My turn... thinking of you üíô";
                gameStatusElement.style.color = 'var(--secondary-dark)';
            }
        }

        // Page 4: Music Player
        let currentSongIndex = 0;
        let isPlaying = false;
        const audioPlayer = new Audio();

        const songs = [
            {
                title: "Perfect",
                artist: "Ed Sheeran",
                album: "A song that reminds me of you",
                src: "https://assets.codepen.io/1468070/Ed+Sheeran+-+Perfect+(Official+Music+Video).mp3"
            },
            {
                title: "A Thousand Years",
                artist: "Christina Perri",
                album: "For all our moments together",
                src: "https://assets.codepen.io/1468070/Christina+Perri+-+A+Thousand+Years+Lyrics.mp3"
            },
            {
                title: "All of Me",
                artist: "John Legend",
                album: "Every part of you is beautiful",
                src: "https://assets.codepen.io/1468070/John+Legend+-+All+Of+Me+(Official+Video).mp3"
            },
            {
                title: "Make You Feel My Love",
                artist: "Adele",
                album: "My love for you, always",
                src: "https://assets.codepen.io/1468070/Adele+-+Make+You+Feel+My+Love+(Official+Lyric+Video).mp3"
            },
            {
                title: "I Will Always Love You",
                artist: "Whitney Houston",
                album: "A promise from my heart",
                src: "https://assets.codepen.io/1468070/Whitney+Houston+-+I+Will+Always+Love+You+(Official+4K+Video).mp3"
            },
            {
                title: "Thinking Out Loud",
                artist: "Ed Sheeran",
                album: "Growing old with you in mind",
                src: "https://assets.codepen.io/1468070/Ed+Sheeran+-+Thinking+Out+Loud+(Official+Video).mp3"
            }
        ];

        function loadPlaylist() {
            const playlistElement = document.getElementById('playlist');
            playlistElement.innerHTML = '';

            songs.forEach((song, index) => {
                const item = document.createElement('div');
                item.classList.add('playlist-item');
                if (index === currentSongIndex) item.classList.add('active');

                item.innerHTML = `
                    <div class="playlist-number">${index + 1}</div>
                    <div class="playlist-details">
                        <h4>${song.title}</h4>
                        <p>${song.artist} ‚Ä¢ ${song.album}</p>
                    </div>
                `;

                item.addEventListener('click', () => playSong(index));
                playlistElement.appendChild(item);
            });

            loadSong(currentSongIndex);
        }

        function loadSong(index) {
            const song = songs[index];
            document.getElementById('currentSongTitle').textContent = song.title;
            document.getElementById('currentArtist').textContent = song.artist;
            document.getElementById('currentAlbum').textContent = song.album;

            // Update active playlist item
            document.querySelectorAll('.playlist-item').forEach((item, i) => {
                item.classList.toggle('active', i === index);
            });

            audioPlayer.src = song.src;
            audioPlayer.addEventListener('loadedmetadata', updateDuration);

            if (isPlaying) audioPlayer.play();
        }

        function playSong(index) {
            if (index === currentSongIndex && audioPlayer.src) {
                togglePlayPause();
                return;
            }

            currentSongIndex = index;
            loadSong(index);
            playAudio();
        }

        function togglePlayPause() {
            if (isPlaying) {
                pauseAudio();
            } else {
                playAudio();
            }
        }

        function playAudio() {
            audioPlayer.play();
            isPlaying = true;
            document.getElementById('playPauseIcon').classList.remove('fa-play');
            document.getElementById('playPauseIcon').classList.add('fa-pause');
        }

        function pauseAudio() {
            audioPlayer.pause();
            isPlaying = false;
            document.getElementById('playPauseIcon').classList.remove('fa-pause');
            document.getElementById('playPauseIcon').classList.add('fa-play');
        }

        function updateDuration() {
            const duration = audioPlayer.duration;
            const durationElement = document.getElementById('duration');

            if (isNaN(duration)) {
                durationElement.textContent = '0:00';
                return;
            }

            const minutes = Math.floor(duration / 60);
            const seconds = Math.floor(duration % 60);
            durationElement.textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
        }

        // Audio player events
        audioPlayer.addEventListener('timeupdate', function () {
            const currentTime = audioPlayer.currentTime;
            const duration = audioPlayer.duration;

            const progressPercent = (currentTime / duration) * 100 || 0;
            document.getElementById('progress').style.width = `${progressPercent}%`;

            const minutes = Math.floor(currentTime / 60);
            const seconds = Math.floor(currentTime % 60);
            document.getElementById('currentTime').textContent =
                `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
        });

        audioPlayer.addEventListener('ended', () => {
            currentSongIndex = (currentSongIndex + 1) % songs.length;
            loadSong(currentSongIndex);
            playAudio();
        });

        // Control buttons
        document.getElementById('playPauseBtn').addEventListener('click', togglePlayPause);
        document.getElementById('nextBtn').addEventListener('click', () => {
            currentSongIndex = (currentSongIndex + 1) % songs.length;
            loadSong(currentSongIndex);
            playAudio();
        });

        document.getElementById('prevBtn').addEventListener('click', () => {
            currentSongIndex = (currentSongIndex - 1 + songs.length) % songs.length;
            loadSong(currentSongIndex);
            playAudio();
        });

        // Progress bar click to seek
        document.getElementById('progressBar').addEventListener('click', function (e) {
            const progressBarWidth = this.clientWidth;
            const clickPosition = e.offsetX;
            const duration = audioPlayer.duration;

            if (!isNaN(duration)) {
                const seekTime = (clickPosition / progressBarWidth) * duration;
                audioPlayer.currentTime = seekTime;
            }
        });

        // Initialize first page
        showPage(1);
    </script>
</body>

</html>
